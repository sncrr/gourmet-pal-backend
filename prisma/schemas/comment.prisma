model Comment {
  id        Int      @id @default(autoincrement())
  user_id   Int
  recipe_id Int
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  user   User   @relation(fields: [user_id], references: [id])
  recipe Recipe @relation(fields: [recipe_id], references: [id])

  @@map("comment")
}

// Imports
model User {
  id       Int       @id @default(autoincrement())
  comments Comment[]
}

model Recipe {
  id       Int       @id @default(autoincrement())
  comments Comment[]
}
